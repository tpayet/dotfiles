alias gst='git log --pretty=format:"%C(auto,yellow)%h%x09%C(auto,green)%ad%x09%C(auto,reset)%s%C(auto,blue)%d" --date=relative --graph --decorate --max-count=5; git status'
alias glog='git log --pretty=format:"%C(auto,yellow)%h%x09%C(auto,green)%ad%x09%C(auto,reset)%s%C(auto,blue)%d" --date=relative --graph --decorate'
alias gp='git push origin $(git rev-parse --abbrev-ref HEAD)'

alias ls='ls -G'
alias subl='open -a Sublime\ Text'

