syn on

filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

set list
set listchars=tab:>Â·,trail:~
set mouse=a

" turn hybrid line numbers on
:set number relativenumber
:set nu rnu

" toggle hybrid line numbers
:set number! relativenumber!
:set nu! rnu!

# easy line moving using ctrl & shift
noremap <c-s-up> ddkP
noremap <c-s-down> ddp

